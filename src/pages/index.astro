---
import A4Page from "../lib/A4Page.astro";
import Resume from "../lib/Resume.astro";
import contentSchema from "../lib/contentSchema.js"; // zod
import * as fs from "fs/promises";
import * as path from "path"; // read ./data/content.json

const content = contentSchema.parse(
	JSON.parse(await fs.readFile(path.join(process.cwd(), "data", "content.json"), "utf-8"))
);
---

<A4Page>
	<Resume content={content} />
</A4Page>
